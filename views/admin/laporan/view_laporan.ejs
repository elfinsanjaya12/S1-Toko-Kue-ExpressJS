<!-- page script -->
<script>
  $(document).ready(function () {
    // datatable
    $('#barang').DataTable()

    // redirect halaman guru
    function successTambah() {
      window.location.replace(window.location.protocol + "//" + window.location.host + '/admin/barang')
    }

    // function simpan
    $('#simpan_barang').on('submit', function (event) {
      event.preventDefault();
      $.ajax({
        url: "/admin/barang/create",
        method: "POST",
        data: $(this).serialize(),
        success: function () {
          swal({
            title: "Success",
            text: "Success Tambah Data Barang",
            icon: "success",
            button: "Oke",
          }).then(suksesDelete => {
            successTambah();
          });
        },
      })
    })
  })


  // Change Status 
  function update_status(id) {
    let idGuru = id;
    swal({
      title: "Yakin Ingin Change Status?",
      icon: "warning",
      buttons: true,
      dangerMode: true,
    }).then(willDelete => {
      if (willDelete) {
        swal({
          title: "Success",
          text: "Success Change Status",
          icon: "success",
        }).then(suksesChange => {
          window.location.assign(`/admin/guru/status/${idGuru}`);
        });
      }
    });
  }

  // Delete guru 
  function delete_barang(id) {
    let BarangId = id;
    swal({
      title: "Yakin Ingin Menghapus Data Barang ini?",
      text: "Data yang dihapus, tidak bisa kembali lagi.",
      icon: "warning",
      buttons: true,
      dangerMode: true
    }).then(willDelete => {
      if (willDelete) {
        swal({
          title: "Success",
          text: "Success Delete Data Barang",
          icon: "success",
          button: "Oke",
        }).then(suksesDelete => {
          window.location.assign(`/admin/barang/delete/${BarangId}`);
        });
      }
    });
  }

  //showing data to edit modal      
  $('#barang').on('click', '.edit', function () {
    var id = $(this).data('id');
    var kode = $(this).data('kode');
    var nama = $(this).data('nama');
    var satuan = $(this).data('satuan');
    var harga = $(this).data('harga');
    $('#edit_modal').modal('show');
    $('.nama').val(nama);
    $('.kode').val(kode);
    $('.harga').val(harga);
    $(".satuan").val(satuan);
    $('.id').val(id);
  });

</script>