<%- include ../../partials/admin_layout/header.ejs %>
<%- include ../../partials/admin_layout/sidebar.ejs %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

  <!-- Main content -->
  <section class="content">
    <div class="row">

      <div class="col-xs-12">
        <div class="box">
          <!-- /.box-header -->
          <div class="box-header">
            <h3 class="box-title">Data Barang</h3>
          </div>

          <div class="box-body">
            <div style="margin: 0 20px 20px 20px;">
              <!-- <button class="btn btn-success">Tambah</button> -->
              <button type="button" class="btn btn-success" data-toggle="modal" data-target="#add_modal">
                Tambah
              </button>
            </div>
            <table id="barang" class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th>No</th>
                  <th>Kode</th>
                  <th>Nama</th>
                  <th>Satuan</th>
                  <th>Harga</th>
                  <th>Aksi</th>
                </tr>
              </thead>
              <tbody>
                <% for (let i = 0; i < barang.length; i++ ) { %>
                <tr>
                  <td><%= i + 1 %></td>
                  <td><%= barang[i].kode_barang %></td>
                  <td>
                    <%= barang[i].nama_barang %>
                  </td>
                  <td>
                    <%= barang[i].satuan %>
                  </td>
                  <td>
                    <%= barang[i].harga %>
                  </td>
                  <td>
                    <%= barang[i].harga %>
                  </td>
                </tr>
                <% } %>

              </tbody>
            </table>
          </div>
          <!-- /.box-body -->
        </div>
        <!-- /.box -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </section>
  <!-- /.content -->
</div>

<!-- include add modal -->
<%- include add_modal.ejs %>

<%- include ../../partials/admin_layout/footer.ejs %>
<!-- page script -->
<script>
  $(document).ready(function () {
    // datatable
    $('#barang').DataTable()

    // redirect halaman guru
    function successTambah() {
      window.location.replace(window.location.protocol + "//" + window.location.host + '/admin/barang')
    }

    // function simpan
    $('#simpan_barang').on('submit', function (event) {
      event.preventDefault();
      $.ajax({
        url: "/admin/barang/create",
        method: "POST",
        data: $(this).serialize(),
        success: function () {
          swal({
            title: "Success",
            text: "Success Tambah Data Barang",
            icon: "success",
            button: "Oke",
          }).then(suksesDelete => {
            successTambah();
          });
        },
      })
    })
  })

  // Delete guru 
  function delete_guru(id) {
    let idGuru = id;
    swal({
      title: "Yakin Ingin Menghapus Data Guru ini?",
      text: "Data yang dihapus, tidak bisa kembali lagi.",
      icon: "warning",
      buttons: true,
      dangerMode: true
    }).then(willDelete => {
      if (willDelete) {
        swal({
          title: "Success",
          text: "Success Delete Data Guru",
          icon: "success",
          button: "Oke",
        }).then(suksesDelete => {
          window.location.assign(`/admin/guru/delete/${idGuru}`);
        });
      }
    });
  }

  //showing data to edit modal      
  $('#guru').on('click', '.edit', function () {
    var id = $(this).data('id');
    var nip = $(this).data('nip');
    var nama = $(this).data('nama');
    var jk = $(this).data('jk');

    $('#EditModal').modal('show');
    $('.nama').val(nama);
    $('.nip').val(nip);
    $("select").val(jk);
    $('.id').val(id);
  });

  // Change Status 
  function update_status(id) {
    let idGuru = id;
    swal({
      title: "Yakin Ingin Change Status?",
      icon: "warning",
      buttons: true,
      dangerMode: true,
    }).then(willDelete => {
      if (willDelete) {
        swal({
          title: "Success",
          text: "Success Change Status",
          icon: "success",
        }).then(suksesChange => {
          window.location.assign(`/admin/guru/status/${idGuru}`);
        });
      }
    });
  }



</script>